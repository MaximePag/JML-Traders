<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - JML Traders</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css" integrity="sha384-B0vP5xmATw1+K9KRQjQERJvTumQW0nPEzvF6L/Z6nronJ3oUOFUFpCjEUQouq2+l" crossorigin="anonymous">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-fixed-top" id="spicy">
        <!--<a class="navbar-brand" href="#">JML Traders</a>-->
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        @Html.ActionLink("JML Traders", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-link">@Html.ActionLink("Création Courtier", "AddBrokers.cshtml", "AddBrokers")</li>
                <li class="nav-link">@Html.ActionLink("Création Client", "AddCustomer", "Home")</li>
                <li class="nav-link">@Html.ActionLink("Prendre Rendez-Vous", "AddAppointment", "Home")</li>
                <li class="nav-link">@Html.ActionLink("Liste des courtiers", "ListBrokers", "Home")</li>
                <li class="nav-link">@Html.ActionLink("Liste des clients", "ListCustomers", "Home")</li>
            </ul>
        </div>
    </nav>
    
        
    <div class="container body-content">
        @RenderBody()

    </div>
    <div class="container-fluid">
        <footer>
            <div class="row">
                <div class="col-md-6" id="postCard">
                    <i class="far fa-map fa-2x"></i>
                    <p>JML Traders</p>
                    <p>12 Campus Innovia</p>
                    <p>60400 NOYON</p>
                    <p><i class="fas fa-phone"></i>  Tel: 06.09.16.10.13</p>
                    <p><i class="far fa-paper-plane"></i> jml.traders@google.com</p>
                </div>
                <div class="col-md-6" id="contact">
                    <form method="post">
                        <fieldset>
                            <legend>Nous contacter</legend>
                            <div>
                                <label for="subject"></label>
                                <textarea id="subject" rows="5" cols="30" placeholder="Exprimez-vous!"></textarea>
                            </div>
                            <div>
                                <label for="email">Votre adresse mail:</label><br>
                                <input type="email" id="email" placeholder="sebastien.dupont@orange.f">
                            </div>
                            <div id="valid">
                                <input type="button" value="poster le message!" role="button" aria-haspopup="true" aria-expanded="false">
                            </div>
                        </fieldset>
                    </form>
                </div>
            </div>
            <div class="row" id="socialNetworks">
                <a href="https://www.linkedin.com/in/ludivine-nadeau-522a4b8b"><i class="fab fa-linkedin-in fa-2x"></i></a>
                <a href="https://facebook.com/batman"><i class="fab fa-facebook-square fa-2x"></i></a>
                <a href="https://twitter.com/bmasques?lang=fr"><i class="fab fa-twitter fa-2x"></i></a>
                <a href="https://snapchat.com/##Batman#Snapchat"><i class="fab fa-snapchat-ghost fa-2x"></i></a>
                <a href="https://www.instagram.com/explore/tags/gelhydroalcoolique/?hl=fr"><i class="fab fa-instagram fa-3x"></i></a><!--assignation couleurs-->
            </div>
            <hr />
            <p class="text-center">&copy; @DateTime.Now.Year - JML Traders</p>
        </footer>
    </div>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script src="https://kit.fontawesome.com/161626f7e5.js" crossorigin="anonymous"></script>
</body>
</html>
