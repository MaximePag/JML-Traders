@model IEnumerable<JML_Traders.Models.af458_customers>

@{
    ViewBag.Title = "Liste des clients";
}

<a class="btn btn-success mt-3" href="@Url.Action("addCustomer", "Customers")"><i class="fas fa-plus"></i> Créer un nouveau client</a>

<h2 class="text-center mb-5">Liste des clients</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.lastname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.firstname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.mail)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.phoneNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.budget)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.af458_brokers.lastname)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.lastname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.firstname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.mail)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.phoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.budget)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.af458_brokers.lastname)
            </td>
            <td>
                <a class="btn btn-warning mt-3" href="@Url.Action("Edit", "Customers", new { id = item.id })"><i class="fas fa-edit"></i> Profil</a>
                <a class="btn btn-warning mt-3" href="@Url.Action("Delete", "Customers", new { id = item.id })"><i class="fas fa-edit"></i> Supprimer</a>
                <a class="btn btn-warning mt-3" href="@Url.Action("Edit", "Customers", new { id = item.id })"><i class="fas fa-edit"></i> Modifier</a>
                <a class="btn btn-warning mt-3" href="@Url.Action("Edit", "Customers", new { id = item.id })"><i class="fas fa-edit"></i> Modifier</a>
                @Html.ActionLink("Edit", "Edit", new { id = item.id }) |
                @Html.ActionLink("Details", "Details", new { id = item.id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.id })
            </td>
        </tr>
    }

</table>
