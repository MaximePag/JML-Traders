@model IEnumerable<JML_Traders.Models.af458_customers>

@{
    ViewBag.Title = "Liste des clients";
}

<a class="btn btn-success mt-3" href="@Url.Action("addCustomer", "Customers")"><i class="fas fa-plus"></i> Créer un nouveau client</a>

<h2 class="text-center mb-5">Liste des clients</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.lastname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.firstname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.mail)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.phoneNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.budget)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.af458_brokers.lastname)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.lastname, "nom :")
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.firstname, "prénom :")
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.mail, "adresse mail :")
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.phoneNumber, "numéro de téléphone :")
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.budget, "Budget :")
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.af458_brokers.lastname, "Courtier :")
            </td>
            <td>
                <a class="btn btn-blue mt-3" href="@Url.Action("DetailsCustomer", "Customers", new { id = item.id })"><i class="fas fa-user"></i> Profil </a>
                <a class="btn btn-danger mt-3" href="@Url.Action("DeleteCustomer", "Customers", new { id = item.id })"><i class="fas fa-eraser"></i> Supprimer </a>
                
            </td>
        </tr>
    }

</table>
