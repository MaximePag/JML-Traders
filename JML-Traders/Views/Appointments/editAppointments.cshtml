@model JML_Traders.Models.af458_appointments

@{
    ViewBag.Title = "Modification de rendez-vous";
}

<a class="btn btn-success mt-3" href="@Url.Action("listAppointments","Appointments")"><i class="fas fa-calendar-plus"></i> Créer un nouveau rendez-vous</a>

<h2 class="text-center mb-5">Modification du rendez vous de @Html.DisplayFor(model => model.af458_brokers.lastname) : </h2>

<div class="row">
    <div class="form-horizontal col-lg-8 offset-lg-2">

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.id)

            <div class="form-group">
                @Html.LabelFor(model => model.dateHour, htmlAttributes: new { @class = "control-label col-md-4" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.dateHour, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.dateHour, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.subject, htmlAttributes: new { @class = "control-label col-md-3" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.subject, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.subject, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.id_af458_brokers, "Liste des courtiers :", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownList("id_af458_brokers", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.id_af458_brokers, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.id_af458_customers, "Liste des clients :", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownList("id_af458_customers", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.id_af458_customers, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="col-lg-12 text-center">
                <input type="submit" value="Modifier" class="btn btn-orange mx-2 my-3" />
            </div>
        }
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
