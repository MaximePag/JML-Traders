@model JML_Traders.Models.af458_appointments

@{
    ViewBag.Title = "Rendez-vous";
}

<a class="btn btn-secondary mt-3" href="@Url.Action("listAppointments", "Appointments")"><i class="fas fa-chevron-left"></i> Retour à la liste des rendez vous</a>
<h2 class="text-center mb-5">Détails du rendez-vous de @Html.DisplayFor(model => model.af458_brokers.lastname) : </h2>
<hr />

<div class="modal fade" id="deleteAppointmentModalDetails" tabindex="-1" arial-labelledy="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Êtes-vous sûr de vouloir supprimer ce rendez-vous ?</h5>
                <button type="button" class="close" data-dismiss="modal" arial-label="Close">
                    <span class="fas fa-times" aria-hidden="true"></span>
                </button>
            </div>
            <div class="modal-footer d-block text-center">
                <a class="btn-lg btn-danger" href="/Appointments/Delete/@Html.DisplayFor(model => model.id)">Supprimer</a>
                <a class="btn-lg btn-secondary" data-dismiss="modal">Annuler</a>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-8 offset-lg-2 text-center">
        <h4>@Html.DisplayNameFor(model => model.dateHour)</h4>
        <h5>@Html.DisplayFor(model=> model.dateHour)</h5>

       <h4>@Html.DisplayNameFor(model => model.subject)</h4>
        <h5>@Html.DisplayFor(model=> model.subject)</h5>

        <h4>@Html.DisplayNameFor(model => model.af458_brokers.lastname)</h4>
        <h5>@Html.DisplayFor(model => model.af458_brokers.lastname)</h5>

        <h4>@Html.DisplayNameFor(model => model.af458_customers.lastname)</h4>
        <h5>@Html.DisplayFor(model => model.af458_customers.lastname)</h5>
    </div>
</div>
<div class="col-lg-12 text-center">
    <a class="btn btn-orange mx-2 my-3" href="/Appointments/editAppointments/@Html.DisplayFor(model => model.id)"><i class="fas fa-edit"></i>Modifier le rendez vous</a>
    <a class="btn btn-danger mx-2 my-3" data-toggle="modal" data-target="#deleteAppointmentModalDetails"><i class="fas fa-times"></i> Supprimer le rendez vous</a>
</div>
